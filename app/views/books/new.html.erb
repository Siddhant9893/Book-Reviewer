<div class="container">
 <div class="row justify-content-center">
   <div class="col-5">
     <div class="mt-5">
<h1>New Book</h1>
<%= form_with model:@book do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>
<br>
    <%= form.label :author %>
    <%= form.text_field :author %>
<br>
    <%= form.label :description %>
    <%= form.text_field :description %>
<br>
    <%= form.label :pdf %>
    <%= form.file_field :pdf %>
<br>
<br>
    <%= form.button %>
    <% end %>
</div>

    

